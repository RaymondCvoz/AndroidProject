<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.67" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.23"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <EditText
        android:id="@+id/timerEvent"
        android:layout_width="354dp"
        android:layout_height="47dp"
        android:hint="事件"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/hg1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.462" />

    <TextView
        android:id="@+id/remindHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="提醒倒计时"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.241" />

    <EditText
        android:id="@+id/inputHours"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:hint="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/hg2"
        app:layout_constraintEnd_toStartOf="@+id/vg1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hg1"
        android:maxLength="2"/>

    <EditText
        android:id="@+id/inputMinutes"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:hint="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/hg2"
        app:layout_constraintEnd_toStartOf="@+id/vg2"
        app:layout_constraintStart_toStartOf="@+id/vg1"
        app:layout_constraintTop_toTopOf="@+id/hg1"
        android:maxLength="2"/>

    <EditText
        android:id="@+id/inputSeconds"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:hint="0"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/hg2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vg2"
        app:layout_constraintTop_toTopOf="@+id/hg1"
        android:maxLength="2" />

    <Button
        android:id="@+id/timerStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.667"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/timerStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.759"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/remainHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="剩余时间"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.424"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/hoursLeft"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:hint="0"
        app:layout_constraintBottom_toTopOf="@+id/hg3"
        app:layout_constraintEnd_toStartOf="@+id/vg1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hg2"
        android:gravity="center"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/minutesLeft"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:hint="0"
        app:layout_constraintBottom_toTopOf="@+id/hg3"
        app:layout_constraintEnd_toStartOf="@+id/vg2"
        app:layout_constraintStart_toStartOf="@+id/vg1"
        app:layout_constraintTop_toTopOf="@+id/hg2"
        android:gravity="center"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/secondsLeft"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:hint="0"
        app:layout_constraintBottom_toTopOf="@+id/hg3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/vg2"
        app:layout_constraintTop_toTopOf="@+id/hg2"
        android:gravity="center"
        android:textSize="40sp" />

</androidx.constraintlayout.widget.ConstraintLayout>